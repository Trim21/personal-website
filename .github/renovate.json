{
  "extends": [
    "github>Trim21/renovate-config:monthly",
    "github>Trim21/renovate-config",
    "github>Trim21/renovate-config:poetry",
    "github>Trim21/renovate-config:py-app"
  ],
  "enabledManagers": [
    "github-actions",
    "git-submodules",
    "poetry"
  ],
  "git-submodules": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true
  },
  "separateMinorPatch": false,
  "separateMajorMinor": false,
  "baseBranches": [
    "master"
  ],
  "ignoreDeps": [
    "mysql",
    "redis"
  ]
}
